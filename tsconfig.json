{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react",
    "lib": [ "dom", "es6" ],
    "noEmit": true,
    "noResolve": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es6",
  },
  "include": [
    "./index.tsx"    
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}